{
  "family": "node-fargate-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::453624447939:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::453624447939:role/ecsTaskExecutionRole",

  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "453624447939.dkr.ecr.us-east-1.amazonaws.com/trubute-backend:latest",
      "essential": true,

      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],

      "environment": [
        { "name": "AWS_REGION", "value": "us-east-1" },
        { "name": "FRONTEND_URI", "value": "https://www.trubute.com" },
        { "name": "AWS_S3_BUCKET", "value": "trubute-data" },
        { "name": "PORT", "value": "5000" },
        { "name": "JWT_SECRET", "value": "TRUBUTE_CODE" }
      ]
    },

    {
      "name": "aws-otel-collector",
      "image": "public.ecr.aws/aws-observability/aws-otel-collector:v0.45.1",
      "essential": true,
      "command": [
        "--config=/etc/ecs/ecs-cloudwatch-xray.yaml"
      ]
    }
  ]
}
