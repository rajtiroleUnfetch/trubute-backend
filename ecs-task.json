{
  "family": "node-fargate-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",

  "executionRoleArn": "arn:aws:iam::453624447939:role/ecsTaskExecutionRole",

  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "453624447939.dkr.ecr.us-east-1.amazonaws.com/trubute-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/node-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
